@model UserModel

@{
    var error = TempData["error"] as string;
}
@{
    if (error != null)
    {
        <div class="bg-danger">
            @error;
        </div>
    }
}

<div class="container-fluid mt-5">
    <form asp-action="Signup" method="post" class="col-5" style="margin-left:25%; margin-right:25%; width:50%">
        <div class="mb-3">
            <label asp-for="@Model.user.Email" class="form-label">Email address</label>
            <input required asp-for="@Model.user.Email" type="email" class="form-control" placeholder="example@gmail.com">
            <div class="form-text">We'll never share your email with anyone else.</div>
            <span class="text-danger" asp-validation-for="@Model.user.Email"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.user.CompanyName" class="form-label">Company name</label>
            <input required asp-for="@Model.user.CompanyName" type="text" class="form-control">
        </div>
        <div class="mb-3">
            <label asp-for="@Model.user.Country" class="form-label">Coutry</label>
            <input required asp-for="@Model.user.Country" type="text" class="form-control">
        </div>
        <div class="mb-3">
            <label asp-for="@Model.user.City" class="form-label">City</label>
            <input required asp-for="@Model.user.City" type="text" class="form-control">
        </div>
        <div class="mb-3">
            <label asp-for="@Model.user.Password" class="form-label">Password</label>
            <input required asp-for="@Model.user.Password" type="password" class="form-control">
        </div>
        <button type="submit" class="btn btn-primary">Signup</button>
        <span>You already have account?<a asp-action="Login" asp-controller="Auth">Login</a></span>
    </form>
</div>