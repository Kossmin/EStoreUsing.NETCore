@model ProductDetailModel
@{
}
<form asp-action="Add" asp-controller="Product" method="post" enctype="multipart/form-data">
    <div class="mb-3 col-12 form-group row">
        <label asp-for="@Model._productObject.ProductName" class="form-label"></label>
        <input required asp-for="@Model._productObject.ProductName" class="form-control" />
        <span asp-validation-for="@Model._productObject.ProductName" class="text-danger"></span>
    </div>
    <div class="row">
        <div class="mb-3 col-5 form-group">
            <label asp-for="@Model._productObject.CategoryId" class="form-label"></label>
            <input required type="number" asp-for="@Model._productObject.CategoryId" class="form-control" />
            <span asp-validation-for="@Model._productObject.CategoryId" class="text-danger"></span>
        </div>
        <div class="mb-3 col-5 form-group">
            <label asp-for="@Model._productObject.Weight" class="form-label"></label>
            <input required asp-for="@Model._productObject.Weight" class="form-control" />
            <span asp-validation-for="@Model._productObject.Weight" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="mb-3 col-5 form-group">
            <label asp-for="@Model._productObject.UnitPrice" class="form-label"></label>
            <input required type="number" asp-for="@Model._productObject.UnitPrice" class="form-control" />
            <span asp-validation-for="@Model._productObject.UnitPrice" class="text-danger"></span>
        </div>
        <div class="mb-3 col-5 form-group">
            <label asp-for="@Model._productObject.UnitInStock" class="form-label"></label>
            <input required type="number" asp-for="@Model._productObject.UnitInStock" class="form-control" />
            <span asp-validation-for="@Model._productObject.UnitInStock" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input required type="file" class="form-control" name="file" />
        </div>
    </div>
    <div>
        <a asp-action="Index" class="btn btn-secondary">Close</a>
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>