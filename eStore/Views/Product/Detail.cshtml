@model ProductDetailModel
@{
}

<div class="card col-4" >
    <img src="@Model._productObject.CoverImgUrl" class="card-img-top" alt="@Model._productObject.ProductName">
    <div class="card-body">
        <h5 class="card-title">@Model._productObject.ProductName</h5>
        <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
    </div>
</div>



<form class="col-7" asp-action="Update" asp-controller="Product" method="post" enctype="multipart/form-data">
    <div class="mb-3 col-12" hidden>
        <label asp-for="@Model._productObject.ProductId" class="form-label"></label>
        <input required asp-for="@Model._productObject.ProductId" class="form-control" />
    </div>
    <div class="row">
        <div class="mb-3 col-10">
            <label asp-for="@Model._productObject.ProductName" class="form-label"></label>
            <input required asp-for="@Model._productObject.ProductName" class="form-control" />
            <span asp-validation-for="@Model._productObject.ProductName" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="mb-3 col-5">
            <label asp-for="@Model._productObject.CategoryId" class="form-label"></label>
            <input required asp-for="@Model._productObject.CategoryId" class="form-control" />
            <span asp-validation-for="@Model._productObject.CategoryId" class="text-danger"></span>
        </div>
        <div class="mb-3 col-5">
            <label asp-for="@Model._productObject.Weight" class="form-label"></label>
            <input required asp-for="@Model._productObject.Weight" class="form-control" />
            <span asp-validation-for="@Model._productObject.Weight" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="mb-3 col-5">
            <label asp-for="@Model._productObject.UnitPrice" class="form-label"></label>
            <input required asp-for="@Model._productObject.UnitPrice" class="form-control" />
            <span asp-validation-for="@Model._productObject.UnitPrice" class="text-danger"></span>
        </div>
        <div class="mb-3 col-5">
            <label asp-for="@Model._productObject.UnitInStock" class="form-label"></label>
            <input required asp-for="@Model._productObject.UnitInStock" class="form-control" />
            <span asp-validation-for="@Model._productObject.UnitInStock" class="text-danger"></span>
        </div>
        <div>
            <input required type="file" class="form-control" name="file" />
        </div>
    </div>
    <div class="row my-4">
        <img width="45%" src ="@Model._productObject.CoverImgUrl"/>
    </div>
    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">Close</a>
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>